<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/record_history_list_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="9dp"
        android:singleLine="true"
        android:textColor="@drawable/pager_title_strip"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/record_history_list_event_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/record_history_list_event_name"
        android:layout_toRightOf="@+id/record_history_list_event_name"
        android:singleLine="true"
        android:textColor="@drawable/my_recorder_text_gray_0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/record_history_list_event_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/record_history_list_event_name"
        android:layout_marginLeft="20dp"
        android:text="@string/event_date"
        android:textColor="@drawable/my_recorder_text_gray_0"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/record_history_list_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/record_history_list_event_date_label"
        android:layout_toRightOf="@+id/record_history_list_event_date_label"
        android:textColor="@drawable/my_recorder_text_gray_0"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/record_history_list_using_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/record_history_list_event_date"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/record_history_list_event_date"
        android:text="@string/using_time"
        android:textColor="@drawable/my_recorder_text_gray_0"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/record_history_list_using_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/record_history_list_using_time_label"
        android:layout_toRightOf="@+id/record_history_list_using_time_label"
        android:textColor="@drawable/my_recorder_text_gray_0"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/record_history_list_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/record_history_list_event_date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:textColor="@drawable/my_recorder_text_gray_0"
        android:visibility="gone" />

</RelativeLayout>